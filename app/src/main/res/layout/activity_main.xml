<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:orientation="vertical"
    android:id="@+id/linearLayout1"
    android:weightSum="2">



    <Button
        android:id="@+id/btn_SCAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickbtn_SCAN"
        android:text="sc" />


    <Button
        android:id="@+id/btn_SWITCH_ONE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickbtn_SWITCH_ONE"
        android:text="1" />

    <Button
        android:id="@+id/btn_SWITCH_TWO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickbtn_SWITCH_TWO"
        android:text="2" />

    <Button
        android:id="@+id/btn_SWITCH_THREE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:onClick="onClickbtn_SWITCH_THREE"
        android:text="3" />

    <Button
        android:id="@+id/btn_SWITCH_FOUR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:onClick="onClickbtn_SWITCH_FOUR"
        android:text="RFID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/tvOut"/>


</LinearLayout>
